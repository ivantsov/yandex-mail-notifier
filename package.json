{
  "name": "yandex-mail-notifier-chrome",
  "version": "1.4.1",
  "author": {
    "name": "Alexander Ivantsov",
    "email": "alexivantsov@ya.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivantsov/yandex-mail-notifier-chrome.git"
  },
  "scripts": {
    "prepush": "npm run lint",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov",
    "test:watch": "jest --watch",
    "start": "webpack-dev-server --config webpack/hot.js",
    "build:prod": "npm run clean && webpack --env prod",
    "zip": "zip -r -X dist/yandex-mail-notifier.zip dist",
    "deploy": "node ./scripts/deploy",
    "publish": "npm run build:prod && npm run zip && npm run deploy",
    "release": "npm run lint && npm run test && node ./scripts/release"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "lodash.debounce": "^4.0.8",
    "query-string": "^4.3.2",
    "raven-js": "^3.12.1",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.2",
    "redux-subscriber": "^1.1.0",
    "redux-thunk": "^2.1.0",
    "redux-webext": "^1.1.2",
    "superagent": "^3.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "codecov": "^2.0.2",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.27.3",
    "date-fns": "^1.28.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "fs-extra": "^2.1.2",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "less": "^2.7.2",
    "less-loader": "^3.0.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.6.1",
    "style-loader": "^0.14.1",
    "webext-i18n": "^1.1.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-shell-plugin": "^0.5.0",
    "write-file-webpack-plugin": "^4.0.0"
  },
  "jest": {
    "rootDir": "./src",
    "resetMocks": true,
    "resetModules": true,
    "moduleDirectories": [
      "node_modules",
      "src/pages"
    ],
    "moduleNameMapper": {
      "\\.(less)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "fixtures.js"
    ]
  }
}
