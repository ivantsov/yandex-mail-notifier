{
  "name": "yandex-mail-notifier-chrome",
  "version": "2.0.0",
  "author": {
    "name": "Alexander Ivantsov",
    "email": "alexivantsov@ya.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivantsov/yandex-mail-notifier-chrome.git"
  },
  "scripts": {
    "prepush": "npm run lint",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov",
    "test:watch": "jest --watch",
    "start:chrome": "npm run clean && webpack-dev-server --env.env=dev --env.target=chrome",
    "start:firefox": "web-ext run --bc -s dist",
    "watch:firefox": "npm run clean && webpack  --env.env=dev --env.target=firefox",
    "build:chrome": "npm run clean && webpack --env.env=prod --env.target=chrome",
    "build:firefox": "npm run clean && webpack --env.env=prod --env.target=firefox",
    "zip": "cd dist && zip -r yandex-mail-notifier.zip . -x \"*.DS_Store\"",
    "deploy": "node ./scripts/deploy",
    "publish": "npm-run-all build:chrome zip deploy",
    "prerelease": "npm-run-all --parallel lint test",
    "release": "node ./scripts/release"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "lodash.debounce": "^4.0.8",
    "prop-types": "^15.5.10",
    "query-string": "^4.3.4",
    "raven-js": "^3.15.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-transition-group": "^1.1.3",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-subscriber": "^1.1.0",
    "redux-thunk": "^2.1.0",
    "redux-webext": "^1.1.2",
    "superagent": "^3.5.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "codecov": "^2.2.0",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.28.2",
    "date-fns": "^1.28.5",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "fs-extra": "^3.0.1",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "npm-run-all": "^4.0.2",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.1",
    "web-ext": "^1.9.1",
    "webext-i18n": "^1.1.0",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-shell-plugin": "^0.5.0",
    "write-file-webpack-plugin": "^4.0.2"
  }
}
